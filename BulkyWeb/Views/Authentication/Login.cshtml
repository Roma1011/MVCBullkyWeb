@using Bulky.Models
@model LoginViewModel
@{
Layout = "_Layout";
}

<style>
    .full-height {
        height: 100vh;
    }
</style>

<div class="full-height d-flex flex-column">
    <div class="row flex-grow-1">
        <div class="col-md-8 col-xs-12 d-flex align-items-center">
            <div class="mt-3">
                <img class="img-fluid w-50" src="~/batman.png" />
            </div>
        </div>
        <div class="col-md-4 col-xs-12 d-flex flex-column justify-content-center bg-primary">
            <h2 class="mb-4 text-light m-1">Sign in to Dribbble</h2>
            <div class="auth-form sign-in-form">
                <div class="form-fields">
                    <fieldset class="m-1">
                        <label asp-for="Email" class="text-light p-1">Email</label>
                        <input asp-for="Email" type="text" id="email" class="form-control">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </fieldset>
                    <fieldset class="m-1">
                        <label asp-for="Password" class="text-light p-1">Password</label>
                        <input asp-for="Password" type="password" id="password" class="form-control">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </fieldset>
                </div>
                <button id="loginButton" type="button" class="btn bg-light mt-3 text-black m-1">Login</button>
                <p class="text-light m-1">
                    New here? Join us now!
                    <a asp-action="RegistrationView" class="text-info">Sign up now</a>
                </p>
                <div id="error-message" class="alert alert-danger d-none" role="alert"></div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/Authentication.js"></script>
